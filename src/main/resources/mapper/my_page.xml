<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myPage">

  <select id="getPlanByUser" parameterType="int" resultType="mybatis.vo.PlanVO">
    SELECT *
    FROM plan_table
    WHERE user_idx = #{userId}
  </select>

  <select id="getJournalByUser" parameterType="int" resultType="mybatis.vo.JournalVO">
    SELECT *
    FROM journal_table
    WHERE user_idx = #{userId}
  </select>

  <select id="getReviewHistoryByUser" parameterType="int" resultType="mybatis.vo.ReviewVO">
    SELECT *
    FROM review_table
    WHERE user_idx = #{userId}
  </select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="faq">

  <select id="totalCount" resultType="int">
    SELECT COUNT(*) FROM faq_table;
  </select>

  <select id="list" resultType="mybatis.vo.FaqVO" parameterType="Map">
    SELECT * FROM (
    SELECT @RN := @RN + 1 AS rnum, a.*
    FROM (
    SELECT * FROM faq_table
    ORDER BY idx
    ) a, (SELECT @RN := 0) b
    ) c
    WHERE c.rnum BETWEEN #{begin} AND #{end}
  </select>

  <select id="selectOne" resultType="mybatis.vo.FaqVO" parameterType="String">
    SELECT * FROM faq_table WHERE idx = #{idx}
  </select>

</mapper>
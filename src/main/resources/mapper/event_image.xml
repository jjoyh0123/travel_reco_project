<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="event_image">

  <select id="list" resultType="mybatis.vo.EventImageVO">
    SELECT * FROM event_image_table
  </select>

  <update id="update_event_image_path" parameterType="map">
    UPDATE event_image_table
    SET file_path = #{uploaded_file_path}, upload_date = NOW()
    WHERE idx = #{idx}
  </update>
</mapper>